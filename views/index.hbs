<div id="wrapper" class="container-fluid">
  <h1>News Scraper</h1>
  <div class="row">
    <div class="col-7">
      <h2><i>Articles</i></h2>
      <div id="articles">
      <ul>
      {{#each articles}}
        <li><a href="{{link}}">{{title}}</a></li>
        <li><button class="btn btn-danger" data-id="{{id}}">comments</button></li>
        <hr>
      {{/each}}
       </ul>
      </div>
    </div>
    <div class="col-5">
    <h2><i>Comments</i></h2>
      <div id="notes"></div>
    </div>
  </div>
</div>
